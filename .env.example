# Base application info
NEXT_PUBLIC_PROJECT_NAME=vendra
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database
DRIZZLE_DATABASE_URL=postgres://user:password@localhost:5432/vendra

# Authentication (Better Auth + Google)
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=generate-a-strong-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI Provider Configuration
# Choose which AI provider to use: "openai" | "anthropic" | "mock"
AI_PROVIDER=openai

# Optional: Override default chat model
# OpenAI default: gpt-4o-mini
# Anthropic default: claude-3-5-haiku-20241022
AI_CHAT_MODEL=

# Optional: Override default STT model
AI_STT_MODEL=

# AI API Keys (provide keys for your chosen providers)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ASSEMBLYAI_API_KEY=your-assemblyai-key

# Psychology Model Configuration
# Controls how psychological context is included in AI prompts
# "full" - Maximum realism with complete psychological state (higher token usage)
# "optimized" - Balanced approach with summarized psychological state (lower token usage)
PSYCHOLOGY_PROMPT_MODE=full
